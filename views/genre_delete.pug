extends layout

block content

  h1 #{title}: #{genre.name}
  if genre_books.length
    p #[strong Delete the following books before attempting to delete this genre.]
    h4 Books
    dl
      each genre in genre_books
        dt
          a(href=genre.url) #{genre.title}
        dd #{genre.summary}
  
  else
    p Do you really want to delete this Genre?
    form(method="post") 
      div.form-group
        input#genre_id.form-control(type="hidden" name="genre_id" value=genre._id)
      button.btn.btn-primary(type="submit") Delete